  color:#fff;
}
.custom_modal.is_visible .custom_modal_body{
  height:100%;
  opacity:1;
  visibility: visible;
  transition: visibility 0.3s linear,opacity 0.5s,height 0.3s linear;
}
.modal_close{
  position:absolute;
  top:0;
  right:20px;
  font-size: 50px;
  color:#fff;
}
.modal_close:hover{
  color: #fff;
  opacity:0.7;
}

body.dmodal_active{
  overflow: hidden;
}










